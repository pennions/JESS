{
  "name": "@pennions/jess",
  "version": "3.0.0",
  "description": "Stylesheet influenced by Pico CSS and Fluent UI from Microsoft ",
  "main": "docs/index.html",
  "files": [
    "dist",
    "jess",
    "docs"
  ],
  "scripts": {
    "dev": "vite",
    "build:docs": "vite build",
    "preview": "vite preview",
    "jess": "node ./node_modules/less/bin/lessc jess/jess.less dist/jess.css",
    "build": "npm run jess && postcss ./dist/jess.css > ./dist/jess.min.css && npm run build-theme",
    "build-theme": "node ./node_modules/less/bin/lessc ./jess/theme/default/default.less dist/default-theme.css && postcss ./dist/default-theme.css > ./dist/default-theme.min.css",
    "publish": "npm run build && npm run build:docs && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pennions/JESS.git"
  },
  "keywords": [
    "Fluent",
    "CSS",
    "LESS"
  ],
  "author": "Jelmer Veen <www.github.com/pennions>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pennions/JESS/issues"
  },
  "homepage": "https://github.com/pennions/JESS#readme",
  "dependencies": {
    "vue": "^3.2.47",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.1.0",
    "cssnano": "^5.1.8",
    "less": "^4.1.2",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "vite": "^4.3.2"
  }
}
