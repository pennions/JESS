{
  "name": "@pennions/jess",
  "version": "3.0.0",
  "description": "Stylesheet influenced by Pico CSS and Fluent UI from Microsoft ",
  "main": "docs/index.html",
  "files": [
    "dist",
    "jess",
    "docs"
  ],
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build:docs": "vite build",
    "build:jess": "node ./node_modules/less/bin/lessc jess/jess.less dist/jess.css",
    "minify:jess": "postcss ./dist/jess.css > ./dist/jess.min.css",
    "build:core": "node ./node_modules/less/bin/lessc jess/jess-core.less dist/jess-core.css",
    "minify:core": "postcss ./dist/jess-core.css > ./dist/jess-core.min.css",
    "build:theme": "node ./node_modules/less/bin/lessc ./jess/theme/default/default.less dist/jess-theme.css",
    "minify:theme": "postcss ./dist/jess-theme.css > ./dist/jess-theme.min.css",
    "build:layout": "node ./node_modules/less/bin/lessc jess/jess-layout.less dist/jess-layout.css",
    "minify:layout": "postcss ./dist/jess-layout.css > ./dist/jess-layout.min.css",
    "build:all": "npm run build:jess && npm run build:core && npm run build:theme && npm run build:layout",
    "minify:all": "npm run minify:jess && npm run minify:core && npm run minify:theme && npm run minify:layout",
    "build": "npm run build:all && npm run minify:all && npm run build:docs",
    "publish": "npm run build && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pennions/JESS.git"
  },
  "keywords": [
    "Fluent",
    "CSS",
    "LESS"
  ],
  "author": "Jelmer Veen <www.github.com/pennions>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pennions/JESS/issues"
  },
  "homepage": "https://github.com/pennions/JESS#readme",
  "dependencies": {
    "lucide-static": "^0.240.0",
    "vue": "^3.2.47",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.1.0",
    "cssnano": "^5.1.8",
    "less": "^4.1.2",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "vite": "^4.3.2"
  }
}